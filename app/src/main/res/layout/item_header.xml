<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_weight="1"
        android:id="@+id/today_container"
        android:layout_height="50dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"
    />
    <TextView android:layout_width="80dp" android:layout_height="match_parent"

                android:text="@string/local"
                android:gravity="center"
               tools:src = "@mipmap/ic_launcher"
              app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/title_local"

               app:layout_constraintLeft_toLeftOf="parent"/>

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"
    />
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              tools:text="Today"
              android:text="@string/today"
              android:gravity="center"
              android:layout_marginLeft="10dp"
              android:layout_marginStart="10dp"
              android:layout_weight="1"
              android:id="@+id/today"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toRightOf="@id/title_local" />
    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"
    />
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              tools:text="tomorrow"
              android:text="@string/today"
              android:gravity="center"

              android:layout_weight="1"
              android:id="@+id/tommorow" />

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"
    />
</LinearLayout>